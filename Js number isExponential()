// only number and strings can be represent exponential 
let value = 1.23e-5;
let isExponential = String(value).toLowerCase().includes('e');
console.log(isExponential); // Output: true

value = 1000;
isExponential = String(value).toLowerCase().includes('e');
console.log(isExponential); // Output: false

value = "2e+10";
isExponential = String(value).toLowerCase().includes('e');
console.log(isExponential); // Output: true
